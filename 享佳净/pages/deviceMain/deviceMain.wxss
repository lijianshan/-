page {
  height: 100%;
}

.containerAll {
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: baseline;
  background: rebeccapurple;
}

.toplevel {
  width: 100%;
  height: 5%;
  background-color: #325087;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.devicename {
  height: 100%;
  color: white;
  font-size: 18px;
}

.deviceset {
  width: 8%;
  height: 80%;
  margin-right: 20rpx;
}

.centerlevel {
  width: 100%;
  height: 35%;
  background-color: #152642;
  display: flex;
  flex-direction: column;
}

.roomoutairparameter {
  color: white;
  font-size: 10px;
  margin-top: 10rpx;
  margin-left: 25rpx;
}

.pm25show {
  color: white;
  margin: 10rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.outdoorAirButton {
  font-size: 10px;
  position: absolute;
  top: 0px;
  left: 0px;
  color: white;
  background-color: #1a3e79;
}

.pm25showtext {
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  font-size: 15px;
}

.servicelifelevel {
  width: 100%;
  height: 10%;
  color: white;
  font-size: 18px;
  background-color: #152642;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.servicecondition {
  display: flex;
  justify-content: flex-start;
}

.serviceconditiontkey {
  width: 25%;
  margin-left: 15rpx;
  font-size: 16px;
}

.serviceconditionvalue {
  width: 65%;
  font-size: 16px;
}

.romstatelevel {
  width: 100%;
  height: 10%;
  background-color: #152642;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-star;
}

.roomstate {
  width: 24%;
  height: 50%;
  background-color: #152642;
  border-top: 1px solid #d3d3d3;
  color: white;
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.borderright {
  border-right: 1px solid #d3d3d3;
}

.roomstateimage {
  width: 30%;
  height: 90%;
}
.transition{
  width: 100%;
  height: 1%;
  background: radial-gradient(#152642, white);
}
.devicecontrollevelA {
  width: 100%;
  height: 26%;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}
.devicecontrollevelA_half{
  width: 100%;
  height: 45%;
  display: flex;
}
.devicecontrollevelA_half .Title{
  width: 25%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  font-weight:600;
}
.devicecontrollevelA_half .Content{
  width: 75%;
  height: 100%;
  display: flex;
}
.devicecontrollevelA_half .buttonView{
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.devicecontrollevelA_half .buttonView_image{
  width:100%;
  height: 70%;
}
.devicecontrollevelA_half .buttonView_text{
  width:100%;
  height: 30%;
  text-align: center;
  font-size: 14px;
}
.devicecontrollevelA_half .offtimeContent{
  width:30%;
  height: 100%; 
  font-size: 25px;
  display: flex;
  justify-content: center;
  align-items: center; 
}
.devicecontrolB_null{
  width: 100%;
  height: 10%;
}
.devicecontrolB {
  width: 100%;
  height: 13%;
  border-top: 1px solid #d3d3d3;
  background-color: #fff;
  display: flex;
}

.powerswitch {
  width: 30%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dcB_powerimage {
  width: 75%;
  height: 90%;
}

.fanspeed {
  width: 70%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.slider {
  width: 90%;
}

.modal-mask {
  width: 100%;
  height: 40%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #000;
  opacity: 0.1;
  overflow: hidden;
  z-index: 9000;
}